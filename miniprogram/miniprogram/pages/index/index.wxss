/**index.wxss**/

.container {
    position:absolute;
    left: 50%;
    top: 80%;
    transform: translate(-50%, -50%);
    width:86%;
    height:26%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.welcome-buttom{
    /**方位大小**/
    position: absolute;
    width: 75%;
    height:28%;
    left: 50%;
    top: -10rpx;
    transform: translateX(-50%);
    /**文字大小/颜色/粗细/位置**/
    font-size: 28px;
    font-weight:normal;
    color: rgba(255, 255, 255, 1);
    /**垂直居中**/
    display: flex;
    align-items: center;
    justify-content: center;
    /**边框**/
    border-radius: 50rpx;
    border-width: 20rpx;
    border-style: solid;
    border-color: aliceblue;
}

.welcome-buttom:active{
    opacity: 0.72;
}

.welcome-logo{
    /**方位大小**/
    position: absolute;
    width: 570rpx;
    height: 200rpx;
    left: 50%;
    top: 200rpx;
    transform: translateX(-50%);
    /**内部样式**/
    display: flex;
    flex-direction: row;  /**行显示**/
}

.logo-left{
    width: 570rpx;
    height: 200rpx;
    /**内容居中**/
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.logo-right{
    width: 570rpx;
    height: 200rpx;
    /**内容居中**/
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.left-right-backgrounds{
    background-color: rgb(255, 255, 255);
    width: 144rpx;
    height: 144rpx;
    /**内容居中**/
    display:flex;
    align-items: center;
    justify-content: center;
    /**圆角**/
    border-radius: 72rpx;
}

.welcome-logo-text{
    font-size: 25rpx;
    color: rgb(126, 124, 124);
}
