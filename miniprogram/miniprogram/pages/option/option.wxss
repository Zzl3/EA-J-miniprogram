/* pages/getPic/getPic.wxss */

.getPic-container{
    position:absolute;
    left: 50%;
    top: 52%;
    transform: translate(-50%, -50%);
    width: 87%;
    height: 45%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.function-card{
    width:100%;
    height: 160rpx;
    /**内部内容居中**/
    display: flex;
    align-items: center;
    justify-content: center;
}

.function-card-title{
    font-size: 55rpx;
    color: white;
}

.function-card:active{
    opacity: 0.72;
}

